{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "lib": ["ES2015"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./"]
    }
  },
  // "exclude": ["node_modules"],
  "include": ["src"]
}
